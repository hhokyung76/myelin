<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%d{HH:mm} %-5level %logger{36} - %msg%n</Pattern>
        </layout>
    </appender>
 
    <logger name="org.tinyfarmer.hub" level="DEBUG"/>
    <logger name="org.tinyfarmer.hub" level="INFO"/> 
    <logger name="org.test.netty" level="DEBUG"/>
    <logger name="org.test.netty" level="INFO"/> 
    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root> 
</configuration>